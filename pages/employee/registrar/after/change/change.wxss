.calendar_title {
  width: 100%;
  margin: 40rpx auto;
  justify-content: space-between;
  font-size: 30rpx;
  color: #000;
  display: flex;
}
.icon{
  font-size: 24rpx;
}
.calendar_title .icon image {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx auto;
}

/* 日历 */
.calendar {
  width: 100%;
  background: #fff;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  padding: 0 0 20rpx;
  font-family: FZZhunYuan-M02S;
  border: 2rpx solid #3a4f60;
}

.header {
  font-size: 0;
  width: 80%;
  margin: 0 auto;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: #666;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1px solid #D0D0D0;
  padding: 20rpx 0;
}

.weekMark {
  position: relative;
  width: 80%;
  margin: 0 auto;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 2px solid #69f;
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
  width: 80%;
  margin: 0 auto;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #666;
  text-align: center;
  vertical-align: middle;
}

.date-head {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12pt;
}

.selectDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background-color: #a3b9cc;
  margin: 0 auto;
}

.classDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background-color: #3a4f60;
  margin: 0 auto;
}

.currentMonth{
  font-size: 46rpx;
}

.buttons{
  margin-top: 40rpx;
}

.button{
  background-color:#627b8f ;
  color: #fff;
}
.tap_button{
  background-color:#8ca2b5; 
}