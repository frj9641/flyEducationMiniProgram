<!--pages/employee/registrar/before/account/account.wxml-->
<view class="page" data-weui-theme="{{theme}}">

	<form class="weui-form" bindsubmit="accountSubmit">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">账单记录</h2>
			<!-- <view class="weui-form__desc">展示表单页面的信息结构样式, 分别由头部区域/控件区域/提示区域/操作区域和底部信息区域组成。</view> -->
		</view>
    
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<!-- <view class="weui-cells__title">表单组标题</view> -->
				<view class="weui-cells weui-cells_form">
        
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">学生姓名</label></view>
						<view class="weui-cell__bd">
							<input disabled="true" class="weui-input" value="{{studentName}}" placeholder="填写学生姓名" placeholder-class="weui-input__placeholder" />
						</view>
					</view>

          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">报名课程</label></view>
						<view class="weui-cell__bd">
							<input disabled="true" class="weui-input" value="{{marketName}}" placeholder="填写学生姓名" placeholder-class="weui-input__placeholder" />
						</view>
					</view>

          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">标价金额</label></view>
						<view class="weui-cell__bd">
							<input disabled="true" class="weui-input" value="{{price}}" placeholder="填写学生姓名" placeholder-class="weui-input__placeholder" />
						</view>
					</view>

          <view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">实缴金额</label></view>
						<view class="weui-cell__bd">
							<input type="digit" name="price" class="weui-input" placeholder="填写实缴金额" placeholder-class="weui-input__placeholder" />
						</view>
					</view>

				</view>
			</view>
		</view>

		<view class="weui-form__opr-area">
			<button class="button" hover-class="tap_button" form-type="submit">确定</button>
		</view>

		<!-- <view class="weui-form__tips-area">
			<view class="weui-form__tips">
                表单页提示，居中对齐
			</view>
		</view> -->
    
		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<!-- <view class="weui-footer__links">
					<a href="javascript:" class="weui-footer__link">底部链接文本</a>
				</view> -->
				<view class="weui-footer__text">Copyright © 2019-2020</view>
			</view>
		</view>

	</form>

</view>
